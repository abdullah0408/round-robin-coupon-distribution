generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CouponStatus {
  Active
  Inactive
}

model Coupon {
  id          String       @id @default(cuid())
  code        String       @unique
  totalissued Int
  totalused   Int
  status      CouponStatus @default(Active)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  claims Claim[] // ✅ No `@relation` here, since it's a one-to-many relation
}

model Claim {
  id        String  @id @default(cuid())
  secret    String  @unique
  userId    String?
  userEmail String?
  guestId   String?
  sessionId String
  ip        String
  used      Boolean @default(false)

  couponId String
  coupon   Coupon @relation(fields: [couponId], references: [id], onDelete: Cascade) // ✅ `onDelete: Cascade` applied correctly

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
